- attributes("titleName") = "Movies"
- attributes("titleClass") = "blueT"
- attributes("title") = "My Movies"
- render("menu.jade")

-@ val movies: List[com.github.fedeoasi.app.model.Movie]
-@ val subsUrlBase: String = "/subtitles?imdbid="

- if(!movies.isEmpty) {
#moviesTable
    table
        thead
            tr
                th
                th(class="title") Title
                th Year
                th ImdbId
                th Subtitles
        tbody
        - for(movie <- movies) {
        tr
            td(class="first image")
                img(src={movie.posterUrl})
            td(class="title")= {movie.title}
            td= {movie.year}
            td= {movie.imdbID}
            td(class="blueB last")
                a(href={subsUrlBase + movie.imdbID}) Subtitles
        tr(class="spacer")
        - }
- }