-@ val imdbId: String
-@ val subtitles: List[com.github.fedeoasi.app.model.SubEntry]
- attributes("title") = "Showing subtitles for " + imdbId
- attributes("titleName") = "Subtitles"
- attributes("titleClass") = "violetT"

- render("menu.jade")

#moviesTable
    table
        thead
            tr
                th Number
                th Start
                th Stop
                th Text
        tbody
        - for(se <- subtitles) {
        tr
            td= {se.number}
            td= {se.start}
            td= {se.stop}
            td= {se.text}
        tr(class="spacer")
        - }
